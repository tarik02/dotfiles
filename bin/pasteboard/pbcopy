#!/usr/bin/env bash

if [[ $IS_WSL == 1 ]]; then
	iconv -f utf8 -t cp1251 | ${WSL_ROOT:-/mnt/c}/Windows/System32/clip.exe
elif type xclip > /dev/null 2>&1; then
	xclip -i -selection clipboard -f | xclip -i -selection primary
elif type xsel > /dev/null 2>&1; then
	xsel --input --clipboard
else
	mkdir -p $DFI_CACHE
	cat - > $DFI_CACHE/pasteboard
fi
